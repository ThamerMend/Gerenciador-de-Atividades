{
  "swagger": "2.0",
  "info": {
    "title": "API Gerenciador de Tarefas",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/category/": {
      "get": {
        "tags": [
          "Category"
        ],
        "description": "Endpoint que retorna todas as categorias",
        "responses": {
          "200": {
            "description": "Lista de categorias",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Category"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Category"
        ],
        "description": "Endpoint que cria uma nova categoria",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Category"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Categoria criada",
            "schema": {
              "$ref": "#/definitions/Category"
            }
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      }
    },
    "/category/{id}": {
      "put": {
        "tags": [
          "Category"
        ],
        "description": "Endpoint que atualiza uma categoria pelo seu identificador",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Category"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Categoria atualizada",
            "schema": {
              "$ref": "#/definitions/Category"
            }
          },
          "400": {
            "description": "Dados inválidos"
          },
          "404": {
            "description": "Categoria não encontrada"
          }
        }
      },
      "delete": {
        "tags": [
          "Category"
        ],
        "description": "Endpoint que remove uma categoria",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Categoria removida"
          },
          "404": {
            "description": "Categoria não encontrada"
          }
        }
      }
    },
