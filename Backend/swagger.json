  "definitions": {
    "Category": {
      "type": "object",
      "required": [
        "description"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "1"
        },
        "description": {
          "type": "string",
          "example": "Esporte"
        }
      }
    },
    "Activity": {
      "type": "object",
      "required": [
        "description",
        "userId",
        "categoryId"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "1"
        },
        "description": {
          "type": "string",
          "example": "Jogar basquete"
        },
        "userId": {
          "type": "integer",
          "example": 1
        },
        "categoryId": {
          "type": "integer",
          "example": 1
        }
      }
    },
    "User": {
      "type": "object",
      "required": [
        "firstName",
        "lastName"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "1"
        },
        "firstName": {
          "type": "string",
          "example": "Mario"
        },
        "lastName": {
          "type": "string",
          "example": "Mario"
        }
      }
    }
